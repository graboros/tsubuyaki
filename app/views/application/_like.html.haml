- if user_signed_in?
  - if current_user.liked?(tweet)
    = link_to 'いいね', user_like_url(current_user, tweet), { method: :delete, class: "likebtn btn btn-danger btn-sm", remote: true }
  - else
    = link_to 'いいね', user_likes_url(current_user, id: tweet), { method: :post, class: "likebtn btn btn-default btn-sm", remote: true }
