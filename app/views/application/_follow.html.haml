- if user_signed_in? and not me?(user)
  - if current_user.following?(user)
    - following = current_user.followed_relationships.find_by(following: user)
    = link_to 'フォロー中', [user, following], { method: :delete, class: "followbtn btn btn-info", remote: true }
  - else
    = link_to 'フォロー', user_followings_url(user), { method: :post, class: "followbtn btn btn-default", remote: true }
