- if search_text.present?
  - searched = User.where(username: search_text).where.not(id: current_user.id)
  - unless searched.present?
    %p該当のユーザが見つかりませんでした
- if userarray.present?
  - searched = searched.select{|user| userarray.exclude?(user.id.to_s)}
  - selected = User.where(id: userarray)

- if selected.present?
  - selected.each do |user|
    = check_box_tag "user[]", user.id, ckecked = true, id: "user_#{user.id}"
    = label_tag "user[#{user.id}]", user.username

- if searched.present?
  - searched.each do |user|
    = check_box_tag "user[]", user.id, ckecked = false, id: "user_#{user.id}"
    = label_tag "user[#{user.id}]", user.username
